{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "scripts/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}